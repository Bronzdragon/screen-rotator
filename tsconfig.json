{
    "compilerOptions": {
        "target": "ES2022",
        "strict": true,
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "outDir": "./target",
        "forceConsistentCasingInFileNames": true,
        "downlevelIteration": true,
        "lib": [
            "ES2022"
        ],
        "pretty": true,
        "sourceMap": false,
        "declaration": false,
        "removeComments": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "exactOptionalPropertyTypes": true,
        "skipLibCheck": true,
    },
    "include": [
        "src/*.ts"
    ]
}